<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageCoin"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textCoinName"
        android:layout_width="118dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Bitcoin"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/imageCoin"
        app:layout_constraintTop_toTopOf="@+id/imageCoin" />

    <TextView
        android:id="@+id/textCoinQuantity"
        android:layout_width="119dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0.02255"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@+id/imageCoin"
        app:layout_constraintTop_toBottomOf="@+id/textCoinName" />

    <TextView
        android:id="@+id/textCoinUserValue"
        android:layout_width="76dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:text="€7533.12"
        android:textAlignment="textEnd"
        android:textColor="@color/colorText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textCoinName" />

    <TextView
        android:id="@+id/text24hChange"
        android:layout_width="94dp"
        android:layout_height="18dp"
        android:layout_marginEnd="16dp"
        android:text="12.41% ▲"
        android:textAlignment="textEnd"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textCoinQuantity" />

</android.support.constraint.ConstraintLayout>